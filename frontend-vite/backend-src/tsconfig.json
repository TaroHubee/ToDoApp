{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "outDir": "../dist-backend",
    "types": ["node"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "verbatimModuleSyntax": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}